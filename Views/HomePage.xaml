<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Wintakam.ViewModels"
             x:Class="Wintakam.Views.HomePage"
             x:DataType="viewmodels:HomeViewModel"
             Title="Accueil"
             Shell.NavBarIsVisible="True">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label
                Text="{Binding WelcomeMessage}"
                FontSize="24"
                FontAttributes="Bold"
                TextColor="{StaticResource Primary}"
                HorizontalOptions="Center"
                Margin="0,40,0,20" />

            <Label
                Text="{Binding UserEmail}"
                FontSize="16"
                TextColor="{StaticResource Gray600}"
                HorizontalOptions="Center"
                Margin="0,0,0,40" />

            <Frame
                BackgroundColor="{StaticResource Gray100}"
                CornerRadius="10"
                Padding="20">
                <VerticalStackLayout Spacing="10">
                    <Label
                        Text="Bienvenue sur Wintakam!"
                        FontSize="18"
                        FontAttributes="Bold"
                        TextColor="{StaticResource WintakamDarkGray}" />
                    <Label
                        Text="La plateforme qui met en avant vos propriétés immobilières."
                        FontSize="14"
                        TextColor="{StaticResource Gray600}"
                        LineHeight="1.3" />
                </VerticalStackLayout>
            </Frame>

            <Button
                Text="Voir les propriétés"
                Command="{Binding NavigateToPropertiesCommand}"
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"
                FontSize="16"
                FontAttributes="Bold"
                CornerRadius="10"
                HeightRequest="50"
                Margin="0,20,0,0"
                HorizontalOptions="Fill" />

            <Button
                Text="Se déconnecter"
                Command="{Binding LogoutCommand}"
                BackgroundColor="{StaticResource WintakamDarkGray}"
                TextColor="White"
                FontSize="16"
                CornerRadius="10"
                HeightRequest="50"
                Margin="0,20,0,0"
                HorizontalOptions="Fill" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
