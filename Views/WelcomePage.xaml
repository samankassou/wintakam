<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Wintakam.ViewModels"
             x:Class="Wintakam.Views.WelcomePage"
             x:DataType="viewmodels:WelcomeViewModel"
             BackgroundColor="White"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="*, Auto, *">

        <!-- Welcome Text -->
        <VerticalStackLayout Grid.Row="0"
                            VerticalOptions="End"
                            HorizontalOptions="Center"
                            Spacing="0"
                            Margin="0,0,0,40">
            <Label Text="Bienvenue sur"
                   FontFamily="OpenSansSemibold"
                   FontSize="40"
                   TextColor="{StaticResource WintakamDarkGray}"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"/>
            <Label Text="Wintakam"
                   FontFamily="OpenSansSemibold"
                   FontSize="40"
                   TextColor="{StaticResource WintakamCyan}"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"/>
        </VerticalStackLayout>

        <!-- Continue Button -->
        <Button Grid.Row="1"
                Text="Continuer"
                Command="{Binding ContinueCommand}"
                BackgroundColor="{StaticResource WintakamDarkGray}"
                TextColor="White"
                FontFamily="OpenSansSemibold"
                FontSize="16"
                CornerRadius="10"
                HeightRequest="73"
                Margin="28,0"
                HorizontalOptions="Fill"/>

    </Grid>

</ContentPage>
