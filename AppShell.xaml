<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Wintakam.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Wintakam"
    xmlns:views="clr-namespace:Wintakam.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Wintakam">

    <!-- Onboarding Pages (no tabs) -->
    <ShellContent
        Title="Welcome"
        ContentTemplate="{DataTemplate views:WelcomePage}"
        Route="WelcomePage" />

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage"
        IsVisible="False" />

    <!-- Main App with Bottom Navigation -->
    <TabBar Route="MainTabs">
        <ShellContent
            Title="Accueil"
            Icon="home.png"
            ContentTemplate="{DataTemplate views:PropertyListPage}"
            Route="PropertyListPage" />

        <ShellContent
            Title="Favoris"
            Icon="heart.png"
            ContentTemplate="{DataTemplate views:HomePage}"
            Route="FavoritesPage" />

        <ShellContent
            Title="Menu"
            Icon="menu.png"
            ContentTemplate="{DataTemplate views:HomePage}"
            Route="MenuPage" />

        <ShellContent
            Title="Événements"
            Icon="calendar.png"
            ContentTemplate="{DataTemplate views:HomePage}"
            Route="EventsPage" />

        <ShellContent
            Title="Compte"
            Icon="person.png"
            ContentTemplate="{DataTemplate views:HomePage}"
            Route="AccountPage" />
    </TabBar>

</Shell>
